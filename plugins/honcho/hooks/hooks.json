{
  "hooks": {
    "sessionStart": [
      {
        "command": "bun run ./hooks/session-start.ts"
      }
    ],
    "sessionEnd": [
      {
        "command": "bun run ./hooks/session-end.ts"
      }
    ],
    "postToolUse": [
      {
        "command": "bun run ./hooks/post-tool-use.ts",
        "matcher": "Write|Edit|Shell|Task|MCP"
      }
    ],
    "beforeSubmitPrompt": [
      {
        "command": "bun run ./hooks/before-submit-prompt.ts"
      }
    ],
    "preCompact": [
      {
        "command": "bun run ./hooks/pre-compact.ts"
      }
    ],
    "stop": [
      {
        "command": "bun run ./hooks/stop.ts"
      }
    ],
    "subagentStop": [
      {
        "command": "bun run ./hooks/subagent-stop.ts"
      }
    ],
    "afterAgentThought": [
      {
        "command": "bun run ./hooks/after-agent-thought.ts"
      }
    ],
    "afterAgentResponse": [
      {
        "command": "bun run ./hooks/after-agent-response.ts"
      }
    ]
  }
}
